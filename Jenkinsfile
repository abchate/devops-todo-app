pipeline {
    agent any

    environment {
        DOCKER_COMPOSE_FILE = 'docker-compose.yml'
    }

    stages {
        stage('V√©rif Docker') {
            steps {
                sh 'docker --version'
                sh 'docker compose version'
            }
        }

        stage('Build & Run via Docker Compose') {
            steps {
                sh 'docker compose -f $DOCKER_COMPOSE_FILE down || true'
                sh 'docker compose -f docker-compose.yml up -d --build --force-recreate --remove-orphans'
            }
        }

        stage('Test Backend API') {
            steps {
                sh 'sleep 5'
                sh 'curl -f http://localhost:9090 || echo "‚ö†Ô∏è Backend non accessible"'
            }
        }

        stage('Test Frontend') {
            steps {
                sh 'curl -f http://localhost || echo "‚ö†Ô∏è Frontend non accessible"'
            }
        }
    }

    post {
        always {
            echo 'üßπ Nettoyage...'
            sh 'docker compose -f $DOCKER_COMPOSE_FILE down'
        }
    }
}
